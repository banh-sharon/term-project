extends layout

block content
  .form-container
    h2 Payment
    
    form(onSubmit="event.preventDefault(); alert('Thanks for your order!');")
      label(for="name") Full Name
      input(type="text", id="name", name="name", required, placeholder="e.g. Whiskers Catson")

      label(for="address") Shipping Address
      input(type="text", id="address", name="address", required, placeholder="123 Cat Street, Meowtown")

      label(for="email") Account Email
      input(type="email", id="email", name="email", required, placeholder="you@example.com")

      label(for="card") Card Number
      input(type="text", id="card", name="card", required, maxlength="19", placeholder="XXXX XXXX XXXX XXXX")

      button(type="submit") Complete Order
